core_usesIn bishbosh/connection write
bishbosh_connection_write_PUBREC()
{
	bishbosh_connection_validate_packetIdentifier
	
	# 5 << 4 in octal, followed by 2 (remaining length)
	printf '\120\002'
	bishbosh_connection_write_twoByteLength $bishbosh_connection_write_packetIdentifier
	
	unset bishbosh_connection_write_packetIdentifier
	
	bishbosh_connection_ping_recordLastSentControlPacketAt
}

bishbosh_connection_write_rePUBREC()
{
	core_message INFO "re-PUBREC-ing packet identifier '$bishbosh_connection_write_packetIdentifier'"
	
	# 5 << 4 in octal, followed by 2 (remaining length)
	printf '\120\002'
	bishbosh_connection_write_twoByteLength $bishbosh_connection_write_packetIdentifier
	
	unset bishbosh_connection_write_packetIdentifier
	
	bishbosh_connection_ping_recordLastSentControlPacketAt
}