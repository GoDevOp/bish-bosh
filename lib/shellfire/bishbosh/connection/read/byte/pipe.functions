bishbosh_connection_read_byte_pipe_initialise()
{
	# TMOUT works for ksh93, bash
	# But works only for auto-logout in pdksh and Busybox's Ash
		
	if [ $bishbosh_connection_supportsNonBlockingRead -eq 0 ]; then
		
		# ksh93, bash, mksh, zsh, Busybox's Ash
		bishbosh_connection_read_byte_pipe_nonBlocking()
		{
			IFS=' ' read -r -u 5 -t $bishbosh_readLatency_inFractionalSeconds $1
		}

		bishbosh_connection_read_byte_pipe_blocking()
		{
			IFS=' ' read -r -u 5 $1
		}
		
	else
		#dash, pdksh, other sh
		bishbosh_connection_read_byte_pipe_nonBlocking()
		{
			#stty -F $pipe -icanon time 0 <&5
			xxxxx
		}

		bishbosh_connection_read_byte_pipe_blocking()
		{
			IFS=' ' read -r $1 <&5
		}
	fi
}
